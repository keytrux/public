<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/achievementIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/achievementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/achievementIcon"
        android:fontFamily="sans-serif-medium"
        android:maxWidth="180dp"
        android:text="Achievement \nName"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/achievementDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/achievementName"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/achievementIcon"
        android:fontFamily="sans-serif-medium"
        android:maxWidth="180dp"
        android:text="Achievement \nDescription"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/achievementDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-medium"
        android:text="Achievement \nDate"
        android:textSize="12sp" />

</RelativeLayout>
